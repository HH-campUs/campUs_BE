{
  "ts-node": {
    "include": ["src", "app.ts"], // build 할 때 이것들을
    "files": true
  },
  "compilerOptions": {
    //엄격한지
    "strict": true,
    //무슨 문법?
    "lib": ["ES6","ES2015"],
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "build", // build한 것들 모여지는 폴더
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "typeRoots": [],
    "experimentalDecorators": true, /* Enables experimental support for ES7 decorators. */
    "emitDecoratorMetadata": true,  /* Enables experimental support for emitting type metadata for decorator*/
  }
}
